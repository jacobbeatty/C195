<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="361.0" prefWidth="204.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JacobBeatty.ViewControllers.CustomerController">
   <children>
      <TextField fx:id="Name" layoutX="29.0" layoutY="80.0" promptText="Customer Name" />
      <TextField fx:id="Address" layoutX="29.0" layoutY="115.0" promptText="Customer Address" />
      <TextField fx:id="Zip" layoutX="29.0" layoutY="151.0" promptText="Customer Zip Code" />
      <TextField fx:id="Phone" layoutX="29.0" layoutY="187.0" promptText="Customer Phone" />
      <ComboBox fx:id="Division" disable="true" layoutX="27.0" layoutY="220.0" prefWidth="150.0" promptText="Customer Division" />
      <ComboBox fx:id="Country" layoutX="27.0" layoutY="252.0" onAction="#changeCountry" prefWidth="150.0" promptText="Customer Country" />
      <Button fx:id="SaveButton" layoutX="51.0" layoutY="288.0" mnemonicParsing="false" onAction="#savePressed" text="Save" />
      <Button fx:id="CancelButton" layoutX="102.0" layoutY="288.0" mnemonicParsing="false" onAction="#cancelButtonPressed" text="Cancel" />
      <TextField fx:id="ID" disable="true" editable="false" layoutX="29.0" layoutY="45.0" promptText="ID's are autogenerated" />
   </children>
</AnchorPane>
